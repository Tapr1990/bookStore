<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos os livros</title>
</head>
<body>
    <h1>todos os livros</h1>
    <ul>
        <% books.forEach((book) => { %>
            <li>
                <a href="/books/<%= book._id %>">
                    <%= book.title %>
                </a>
                por <%= book.author %>
            </li>
        <% });%>
    </ul>
    <nav>
        <a href="/">Home</a>
    </nav>
</body>


